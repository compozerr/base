{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "include": ["../../../frontend/src/**/*"],
    "exclude": ["node_modules", "build", "dist"],
    "compilerOptions": {
        "jsx": "preserve",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "baseUrl": "../../../frontend/src",
        "paths": {
            "@/*": ["./*"]
        }
    }
}
