{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run npm run dev",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "All services are ready!",
                    "endsPattern": "Shutting down..."
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
